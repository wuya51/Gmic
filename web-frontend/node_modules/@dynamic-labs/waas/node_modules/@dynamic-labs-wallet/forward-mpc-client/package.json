{
  "name": "@dynamic-labs-wallet/forward-mpc-client",
  "version": "0.1.2",
  "description": "WebSocket client for Forward MPC operations",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist/**/*",
    "!dist/**/.tsbuildinfo",
    "README.md",
    "LICENSE.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dynamic-labs/forward-mpc-client.git",
    "directory": "packages/client"
  },
  "author": "Dynamic Labs, Inc.",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "dependencies": {
    "@dynamic-labs-wallet/core": "^0.0.167",
    "@evervault/wasm-attestation-bindings": "^0.3.1",
    "@noble/hashes": "^2.0.0",
    "@noble/post-quantum": "^0.5.1",
    "eventemitter3": "^5.0.1",
    "fp-ts": "^2.16.11",
    "ws": "^8.18.3",
    "@dynamic-labs-wallet/forward-mpc-shared": "0.1.0"
  },
  "devDependencies": {
    "@types/node": "^24.5.1",
    "@types/ws": "^8.18.1",
    "rimraf": "^6.0.1",
    "tsup": "^8.3.5",
    "typescript": "^5.9.2"
  },
  "keywords": [
    "websocket",
    "mpc",
    "crypto",
    "client"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf dist .tsbuildinfo",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix"
  }
}